<% if !@Image.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @Image.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>
<div class = "well">
   <%= form_for @Image, html: { multipart: true, class: "" } do |f| %>
      <div class = "form-group">
         <%= f.label :body_type %>
         <%= f.select :body_type, options_for_select(["Comet",
                                                      "Constellation",
                                                      "Galaxy",
                                                      "Meteor",
                                                      "Satellite",
                                                      "Solar Body",
                                                      "Star"]) %>
      </div>

      <div class = "form-group">
         <%= f.label :title %>
         <%= f.text_field :title %>
      </div>

      <div class = "formfield">
         <%= f.label :description %>
         <%= f.text_area :description %>
      </div>

      <div class = "form-group">
         <%= f.label :location %>
         <%= f.text_field :location %>
      </div>

      <div class="form-group">
      <%= f.label 'Date taken' %>
      <%= f.date_field :date, :autocomplete => 'off',
                        "data-provide" => 'datepicker' %>
      </div>

      <div class = "form-group">
         <%= f.label :attachment %>
         <%= f.file_field :attachment %>
      </div>
      
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>