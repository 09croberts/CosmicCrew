<h3>Image</h3>
<br />

<% if @Image.attachment.file.identifier == "no_image" ||  @Image.attachment.file.identifier == nil %>
	<%= image_tag("/uploads/image/img-not-found.png") %>
<% else %>
    <%= image_tag(@Image.attachment_url(:downscaled)) %>
<% end %>

<br />
<%= link_to "View Raw", @Image.attachment_url, class: "btn btn-primary" %>
<% if user_signed_in? %>
<% if current_user.admin? or current_user == @Image.user %>
	<%= button_to "Delete", @Image, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete the image?" %>
<% end %><% end %>
<br /><br />

<p>Type of object: <%= @Image.body_type %></p>
<p>Uploaded at: <%= @Image.created_at %></p>
<p>Dimensions: <%= @Image.width %>x<%= @Image.height %></p>
<p>Uploaded by: <%= @Image.user.first_name + " " + @Image.user.last_name %></p>

<hr>

<h3>Comments</h3>

<% if user_signed_in? %>
<% if not current_user.guest? %>
<%= form_for ([@Image, @Image.comments.build]) do |f| %>
	<p>
		<%= f.label "Write comment" %>
	<p>
	<p>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit "Post comment" %>
	</p>
<% end %>
<% end %>
<% end %>

<br/>

<% @Image.comments.reverse.drop(1).each do |t| %>
	<% if t.text != "" %>
		<p><b><%= @Image.user.first_name + " " + @Image.user.last_name + 
					" - " + t.created_at.to_s(:db) %></b></p>
		<p><%= t.text %></p>
		<br />
	<% end %>
<% end %>